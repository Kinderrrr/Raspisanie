<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="top|center"
        android:gravity="center|top"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="top|center"
            android:gravity="center|top"
            android:orientation="horizontal">
              
            <TextView
                android:id="@+id/StatPlayer11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player1" />

            <TextView
                android:id="@+id/StatPlayer12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="@string/player2" />
        
         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="top|center"
            android:gravity="center|top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PointsPlayer11"  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/PointsPlayer12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"/>
            
        </LinearLayout>
        
     </LinearLayout>
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/kletka"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Container1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Container2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Container3"
                 android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/Container4"
                 android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Container5"
                 android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Container6"
                 android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/Container7"
                 android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Container8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Container9"
                 android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Почистить" />
    
</LinearLayout>
